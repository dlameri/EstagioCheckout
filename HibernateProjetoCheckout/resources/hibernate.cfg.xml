<!DOCTYPE hibernate-configuration SYSTEM 
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	
	<session-factory>
		<!-- Configuracoes -->
	   <property name="current_session_context_class">thread</property>
	   <property name="hibernate.show_sql">true</property>
	   <property name="hibernate.hbm2ddl.auto">create</property>
		
		<!-- Conexao com o Banco -->
	    <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@172.20.23.146:1521:xe</property>
		<property name="hibernate.connection.username">ESTAGIOX</property>
		<property name="hibernate.connection.password">ESTAGIOX</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		
		<!-- Mapeamento -->
		<mapping class="domain.Customer" />
		<mapping class="domain.History" />
		<mapping class="domain.Product" />
		<mapping class="domain.HistoryProduct" />
		
	</session-factory>
</hibernate-configuration>