<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
		<!-- Checkout -->
		<mapping class="com.ideais.spring.model.checkout.Address"/>
		<mapping class="com.ideais.spring.model.checkout.Customer"/>
		<mapping class="com.ideais.spring.model.checkout.PurchaseOrder"/>
		<mapping class="com.ideais.spring.model.checkout.ShoppingCart"/>
		<mapping class="com.ideais.spring.model.checkout.ShoppingCartLine"/>
		
		<!-- Stock -->
		<mapping class="com.ideais.spring.model.stock.Image"/>
		<mapping class="com.ideais.spring.model.stock.Sku"/>
		<mapping class="com.ideais.spring.model.stock.Product"/>
		<mapping class="com.ideais.spring.model.stock.Brand"/>
    </session-factory>
</hibernate-configuration>